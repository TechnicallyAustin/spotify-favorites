<form method="post" action="/playlists/<%=@playlist.id%>">
<input type="hidden" id="hidden" name="_method" value="patch">

<h3>
<label>Title: </label>
<input type ='text' name="playlist[info][title]" value='<%=@playlist.title%>'>
</br>
<label>Description: </label>
<input type ='text' name="playlist[info][description]" value='<%=@playlist.description%>'>
</h3>

